<!DOCTYPE html>
<html>
  <head>
    <title>Mystudygroup</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="background-image"></div>
  <nav class="navbar navbar-expand-md navbar-light">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="/">mystudygroup</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/findagroup">Find a group</a>
        </li>
        <% if is_admin? %>
          <li class="nav-item btn-group">
            <!-- <a class="nav-link" href="/admin">Administration</a> -->
            <a class="dropdown-toggle nav-link" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Administration
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <a class="dropdown-item" href="/admin/users">Users</a>
                    <a class="dropdown-item" href="/admin/courses">Courses</a>
                    <a class="dropdown-item" href="/admin/enrollments">Enrollments</a>
                </div>
            </li>
          </li>
        <% elsif is_logged_in? %>
        <li class="nav-item btn-group">
          <a class="dropdown-toggle nav-link" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= session[:first_name] %>
              <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <a><%= link_to 'Your Profile', update_user_path(session[:user_id]), class: "dropdown-item" %></a>
              </div>
          </li>
        </li>
      <% end %>

      </ul>
      <ul class="navbar-nav">
        <% if is_logged_in? %>
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= session[:first_name] %> ! </span>
          </li>
          <li class="nav-item">
            <%= link_to 'Logout', logout_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Register", new_user_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <body>
    <%= yield %>
  </body>
</html>
