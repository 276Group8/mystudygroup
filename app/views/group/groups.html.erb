
<div class="large-panel panel-default">
  <div class="group-container">
    <h1>Your groups:</h1>

    <% if (@empty) %>
      <%= @empty %>
      </br>
      <p> Go to your courses to join a group <a href="/courses">Here.</a>
    <% else %>
      <div class="row">
        <% @groups.each do |group| %>
        <div class="col-sm-4">
          <div class="card">
            <img class="card-img-top" src="https://i.vimeocdn.com/portrait/9767992_640x640">
            <h6 class="card-subtitle mb-2 text-muted"><%= group.course.name %></h6>
            <div class="card-block">
              <h4 class="card-title"><%= group.name %></h4>
              <hr>
              <p class="card-text"><%= group.description %></p>
            </div>
            <a class="btn btn-primary" href="/group_page/<%= group.id %>">Enter</a>
            <a class="card-link" href="/enrollments/group/remove/<%= group.id %>">Leave Group</a>
          </div>
        </div>
        <% end %>
      </div>
      <a class="btn btn-primary add-group-btn" href="/addagroup">Add a group</a>
    <% end %>
  </div>
</div>
