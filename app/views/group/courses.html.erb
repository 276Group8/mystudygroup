
<div class="large-panel panel-default">

    <h1>Your courses:</h1>

    <% if (@empty) %>
      <%= @empty %>
      </br>
      <p> You can enroll in courses <a href="/add_courses">Here.</a>
    <% else %>

      <% @enrollments.each do |enrollment| %>
        <div class="card">
          <div class="card-block">
            <h4 class="card-title"><%= enrollment.course.name %></h4>
            <hr>
            <p class="card-text"><%= enrollment.course.description %></p>
            <a href="/findagroup/<%= enrollment.course.id %>" class="card-link">Find a Group</a>
            <a href="/studyspots/<%= enrollment.course.id %>" class="card-link">Find a Study Spot</a>
            <a href="/enrollments/remove/<%= enrollment.id %>" data-confirm="Are you sure? It will also remove any groups that are linked to this course" class="card-link remove">Remove Course</a>
          </div>
        </div>
      <% end %>

      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <a class="btn btn-primary" href="/add_courses">Add another course</a>
    <% end %>

</div>
