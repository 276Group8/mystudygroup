
<div class="large-panel panel-default">

  <h1>Groups for <%= @course.name %></h1>

  <% if (@empty) %>
    <%= @empty %>
    </br>
    <p> You can add a group <a href="/addagroup/">Here.</a>
  <% else %>
    <div class="row">
      <% @groups.each do |group| %>
      <div class="col-sm-4">
        <div class="card">
          <img class="card-img-top" src="https://i.vimeocdn.com/portrait/9767992_640x640" style="height: 100px">
          <h6 class="card-subtitle mb-2 text-muted"><%= group.course.name %></h6>
          <div class="card-block">
            <h4 class="card-title"><%= group.name %></h4>
            <hr>
            <p class="card-text"><%= group.description %></p>
          </div>
          <% if @group_ids.include?(group.id) %>
            <a class="btn btn-success" href="/group_page/<%= group.id %>">Enter!</a>
          <% else %>
            <a class="btn btn-primary" href="/join_group/<%= group.course_id %>/<%= group.id %>">Join!</a>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>

</div>
