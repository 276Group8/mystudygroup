<div class="admin-panel panel-default">
  <h1>Listing Users</h1>

  <table class="table table-striped">

    <thead>
      <tr>
        <th>User Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', '/admin/users/' + user.id.to_s %></td>
          <td><%= link_to 'Edit', '/admin/users/' + user.id.to_s + '/edit' %></td>
          <td><%= link_to 'Destroy', '/admin/users/' + user.id.to_s, method: :delete, data: { confirm: 'Are you sure?' + "\r\n" + 'It will also delete all enrollments associated with this user.' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
