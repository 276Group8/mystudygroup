<div class="admin-panel panel-default">

  <h1>Grades For: <%= @course.name  %></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Student Id</th>
        <th>Student Name</th>
        <th>Percentage</th>
        <th>Lettergrade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td><%= enrollment.user.id %></td>
          <td><%= enrollment.user.first_name + ' ' + enrollment.user.last_name %></td>
          <td><%= enrollment.percentage %>%</td>
          <td><%= enrollment.lettergrade %></td>
          <td><%= link_to 'Show', enrollment %></td>
          <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
          <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Edit', edit_course_path(@course) %> |
  <%= link_to 'Back', courses_path %>
</div>
